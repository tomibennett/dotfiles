[core]
	excludesfile = $HOME/.gitignore
	autocrlf = input
[user]
	name = $GIT_USERNAME
	email = $GIT_USERMAIL
	signingkey = $GPG_SIGNING_KEY
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lgn = log --graph --no-color --pretty=format:'%h -%d %s (%cr) <%an>' --abbrev-commit
[github]
	user = $GITHUB_USER
[init]
	defaultBranch = main
[commit]
	gpgsign = true
